<html lang="es">
    <%- include ('./partials/head') %>
    <body>
        <header>
            <nav>
                <ul class="navbar">
                    <div class="navleft">
                        <a href="#"><li>Catálogos</li></a>
                    </div>
                    <div class="navcenter">
                        <a class="cherry" href="/"><li class="cherry">Cherry Kiss<img class="logo" src="img/cherrykiss2.png"></li></a>
                    </div>
                    <div class="navright">
                        <a href="#"><li>Registrarse</li></a>
                        <a href="#"><li>Iniciar sesión</li></a>
                    </div>
                </ul>
            </nav>  
            <div class="search-bar">
                <textarea placeholder="Buscar"></textarea>
            </div>
        </header>
        <main>
            <div class="carousel">
                <div class="carousel-track">
                    <% banners.forEach(b => { %>
                    <div class="slide"><img src="/img/<%= b.image %>" alt="<%= b.alt %>"></div>
                    <% }) %>
                </div>
                <button id="prev"><i class="fa-solid fa-chevron-left"></i></button>
                <button id="next"><i class="fa-solid fa-chevron-right"></i></button>
            </div>
            <section class="brands">
                <h2>Marcas Destacadas</h2>
                <div class="brands logos">
                    <% brands.forEach(brand => { %>
                    <a href="#"><div class="brand <%= brand.name %>"><img src="/img/<%= brand.image %>"></div></a>
                    <% }) %>
                </div>
            </section>
        </main>
        <%- include ('./partials/footer') %>
    </body>
</html>